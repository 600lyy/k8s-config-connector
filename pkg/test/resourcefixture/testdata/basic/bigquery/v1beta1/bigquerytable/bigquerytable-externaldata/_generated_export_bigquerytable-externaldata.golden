apiVersion: bigquery.cnrm.cloud.google.com/v1beta1
kind: BigQueryTable
metadata:
  annotations:
    cnrm.cloud.google.com/project-id: ${projectId}
  labels:
    cnrm-test: "true"
    managed-by-cnrm: "true"
  name: bigquerytable-${uniqueId}
spec:
  datasetRef:
    external: bigquerydataset${uniqueId}
  description: An updated BigQuery table.
  expirationTime: 2064442632000
  externalDataConfiguration:
    autodetect: false
    avroOptions:
      useAvroLogicalTypes: true
    compression: NONE
    csvOptions:
      encoding: ISO-8859-1
      fieldDelimiter: ;
      quote: ''''
      skipLeadingRows: 2
    ignoreUnknownValues: true
    maxBadRecords: 100
    parquetOptions:
      enableListInference: true
      enumAsString: true
    sourceFormat: CSV
    sourceUris:
    - gs://cloud-samples-data/bigquery/us-states/us-states-by-date.csv
  friendlyName: BigQuery Table Updated
  resourceID: bigquerytable-${uniqueId}
  schema: '[{"mode":"REQUIRED","name":"dateField","type":"DATE"},{"mode":"REQUIRED","name":"intField","type":"INTEGER"},{"mode":"NULLABLE","name":"stringField1","type":"STRING"},{"mode":"NULLABLE","name":"stringField2","type":"STRING"},{"mode":"NULLABLE","name":"stringField3","type":"STRING"}]'